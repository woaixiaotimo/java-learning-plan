<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--登录；后缀 拦截-->
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.servle.Filter.SessionFilter</filter-class>
        <init-param>
            <param-name>logonStrings</param-name><!-- 对登录页面不进行过滤 -->
            <param-value>/index.jsp;login.do</param-value>
        </init-param>
        <init-param>
            <param-name>includeStrings</param-name><!-- 只对指定过滤参数后缀进行过滤 -->
            <param-value>.do;.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>redirectPath</param-name><!-- 未通过跳转到登录界面 -->
            <param-value>/index.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>disabletestfilter</param-name><!-- Y:过滤无效 -->
            <param-value>N</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--防盗链-->
    <filter>
        <filter-name>AntiTheftChainFilter</filter-name>
        <filter-class>com.servle.Filter.AntiTheftChainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AntiTheftChainFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--字符编码拦截器设置-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.servle.Filter.CharacterEncodingFilter</filter-class>
        <!--使用何种编码-->
        <init-param>
            <param-name>CharacterEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <!--是否启动该功能-->
        <init-param>
            <param-name>enabled</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--日志记录-->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.servle.Filter.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--异常捕捉-->
    <filter>
        <filter-name>ExceptionFilter</filter-name>
        <filter-class>com.servle.Filter.ExceptionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExceptionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--配置主servlet-->
    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.servle.InitServer</servlet-class>
        <!--启动顺序-->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--配置url规则并指定servlet处理-->
    <servlet-mapping>
        <servlet-name>initServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

</web-app>